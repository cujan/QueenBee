<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background_uvod" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="18dip"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/novy_chov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="23dip"
            android:background="@drawable/button_custom"
            android:onClick="onVytvorNovyChov"
            android:text="@string/novy_chov" />

        <Button
            android:id="@+id/zoznam_chovov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_custom"
            android:onClick="onZoznamChovov"
            android:text="@string/zoznam_chovov" />

        <Button
            android:id="@+id/o_programe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_custom"
            android:onClick="onOPrograme"
            android:text="@string/o_programe" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/kontakt_text"
        android:id="@+id/contactText"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="63dp"
        android:layout_marginBottom="87dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/vyvojariText"
        android:id="@+id/vyvojariText"
        android:layout_above="@+id/contactText"
        android:layout_alignLeft="@+id/contactText"
        android:layout_marginBottom="66dp" />


</RelativeLayout>